---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { FaBoxOpen, FaHeadset, FaRegCheckCircle } from "react-icons/fa";

// Pre-render this static page
export const prerender = true;

const title = "About Us";
const meta_title = "About Us | Storeplate";
const description = "Learn more about our store, our mission, and why customers love shopping with us.";
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
>
  <PageHeader title={title} />

  <section>
    <div class="container">
      <div class="lg:flex gap-8 mt-14 lg:mt-28">
        <ImageMod
          class="rounded-md mx-auto"
          src="/images/aboutUs.png"
          width={536}
          height={449}
          alt="About our store"
        />
        <div class="mt-10 lg:mt-0">
          <h2>Our Story</h2>
          <p class="mt-4 text-text-light dark:text-darkmode-text-light leading-7">
            Welcome to our store! We are passionate about bringing you the best products
            at competitive prices. Our journey began with a simple mission: to make quality
            products accessible to everyone while providing exceptional customer service.
          </p>
          <p class="mt-4 text-text-light dark:text-darkmode-text-light leading-7">
            Today, we continue to grow and evolve, always keeping our customers at the heart
            of everything we do. Thank you for being part of our story.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div
        class="bg-light px-7 py-20 dark:bg-darkmode-light text-center rounded-md"
      >
        <h2>Reasons to shop with us</h2>

        <div class="row justify-center gap-6 mt-14">
          <div class="col-6 md:col-5 lg:col-3">
            <div class="flex justify-center">
              <FaHeadset size={48} />
            </div>
            <h3 class="md:h4 mt-6 mb-4">24/7 Friendly Support</h3>
            <p>Our support team always ready for you 7 days a week</p>
          </div>

          <div class="col-6 md:col-5 lg:col-3">
            <div class="flex justify-center">
              <FaBoxOpen size={48} />
            </div>
            <h3 class="md:h4 mt-6 mb-4">7 Days Easy Return</h3>
            <p>Product any fault within 7 days for an immediate exchange.</p>
          </div>

          <div class="col-6 md:col-5 lg:col-3">
            <div class="flex justify-center">
              <FaRegCheckCircle size={48} />
            </div>
            <h3 class="md:h4 mt-6 mb-4">Quality Guaranteed</h3>
            <p>
              If your products are not perfect, return them for a full refund
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
