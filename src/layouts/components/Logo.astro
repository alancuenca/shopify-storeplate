---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src }: { src?: string } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const logoWidth = Number(logo_width.replace("px", ""));
const logoHeight = Number(logo_height.replace("px", ""));

---

<a href="/" class="navbar-brand inline-block">
  {
    src || logo ? (
      <ImageMod
        src={src ? src : logo}
        class="inline-block object-contain max-h-[60px] max-w-[65px] dark:invert dark:brightness-0"
        width={60}
        height={55}
        alt={title}
        format="webp"
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
