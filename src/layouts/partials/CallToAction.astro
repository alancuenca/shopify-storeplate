---
import ImageMod from "@/components/ImageMod.astro";

const ctaData = {
  enable: true,
  sub_title: "Limited Time Offer",
  title: "Discover Our Latest Collection",
  description: "Shop now and enjoy exclusive deals on our newest arrivals. Quality products at unbeatable prices.",
  button: {
    enable: true,
    label: "Shop Now",
    link: "/products"
  },
  image: "/images/call-to-action.png"
};
---

{
  ctaData.enable && (
    <section class="section">
      <div class="container">
        <div class="rounded-xl bg-light px-6 py-8 md:py-16 dark:bg-darkmode-light">
          <div class="row items-center">
            <div class="mb-10 md:mb-0 lg:col-6 xl:col-6 mx-auto text-center order-2 lg:order-0">
              <p class="md:text-lg text-text-dark dark:text-darkmode-text-dark font-bold">
                {ctaData.sub_title}
              </p>
              <h2 class="my-2 h1">{ctaData.title}</h2>
              <p class="mb-6 md:text-lg">
                {ctaData.description}
              </p>

              {ctaData.button.enable && (
                <a
                  class="btn btn-sm md:btn-lg btn-primary font-medium"
                  href={ctaData.button.link}
                >
                  {ctaData.button.label}
                </a>
              )}
            </div>

            <div class="mx-auto lg:col-5 mb-6 lg:mb-0">
              <ImageMod
                src={ctaData.image}
                height={543}
                width={390}
                alt="cta-image"
                class="mx-auto"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
